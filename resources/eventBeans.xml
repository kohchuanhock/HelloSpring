<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="helloWorld" class="com.events.HelloWorld">
        <property name="message" value="Hello World!"/>
    </bean>
    <bean id="cStartEventHandler" class="com.events.CStartEventHandler"/>
    <bean id="cStopEventHandler" class="com.events.CStopEventHandler"/>
    <bean id="customEventHandler" class="com.events.CustomEventHandler"/>
    <bean id="customEventPublisher" class="com.events.CustomEventPublisher"/>
</beans>